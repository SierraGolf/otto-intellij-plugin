<idea-plugin version="2">
  <id>de.quandoo.ideaplugin.otto</id>
  <name>Quandoo - Otto Plugin</name>
  <version>1.0</version>

  <description><![CDATA[
    Provides actions which allow you quickly move around the event bus.
    <ul>
      <li><code>@Subscribe</code> to <code>@Produce</code> and calls to <code>post()</code></li>
      <li><code>@Produce</code> to all <code>@Subscribe</code>s</li>
    </ul>
      ]]></description>

  <change-notes><![CDATA[
    1.0.0: Initial version.
  ]]></change-notes>

  <idea-version since-build="107.105"/>

  <project-components>
    <component>
      <implementation-class>de.quandoo.ideaplugin.otto.OttoProjectHandler</implementation-class>
    </component>
  </project-components>

  <extensions defaultExtensionNs="com.intellij">
    <codeInsight.lineMarkerProvider language="JAVA"
        implementationClass="de.quandoo.ideaplugin.otto.OttoLineMarkerProvider"/>
    <implicitUsageProvider implementation="de.quandoo.ideaplugin.otto.OttoImplicitUsageProvider"/>
  </extensions>
</idea-plugin>